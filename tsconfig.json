{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "./types"],
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@*": ["./src/*"],
        }
    },
    "include": ["index.tsx", "src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["node_modules", "webpack.common.js", "webpack.dev.js"]
}