{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "./types"],
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@api/*": ["src/api/*"],
            "@config/*": ["src/config/*"],
            "@base/*": ["src/base/*"],
            "@components/*": ["src/components/*"], 
            "@components/ui/*": ["src/components/ui/*"], 
            "@base-components/*": ["src/base-components/*"],
            "@src/*": ["src/*"],
            "@lib/*": ["lib/*"],
            "@/*": ["./*"]
        }
    },
    "include": ["index.tsx", "src/**/*.tsx", "src/**/*.ts", "global.d.ts"],
    "exclude": ["node_modules", "webpack.common.js", "webpack.dev.js"]
}